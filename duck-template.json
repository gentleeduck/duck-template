{
  "$schema": "https://duckduckgo.com/duckduckgo.json",
  "name": "wiseman",
  "version": "0.1.0",
  "description": "Wise decisions, powered by types.",
  "outdir": "./output",
  "args": {
    "name": "Wiseman"
  },
  "variants": [
    {
      "name": "cli-package",
      "description": "A TypeScript-based CLI tool scaffold",
      "src": [
        {
          "type": "file",
          "path": "package.json",
          "content": "{\n  \"name\": \"{{ name }}-cli\",\n  \"version\": \"0.1.0\",\n  \"bin\": {\n    \"{{ name }}\": \"./dist/cli.js\"\n  },\n  \"scripts\": {\n    \"build\": \"tsc\",\n    \"start\": \"node dist/cli.js\"\n  },\n  \"dependencies\": {\n    \"commander\": \"^9.0.0\"\n  },\n  \"devDependencies\": {\n    \"typescript\": \"^4.0.0\"\n  }\n}",
          "args": [
            "{{ name }}"
          ]
        },
        {
          "type": "file",
          "path": "tsconfig.json",
          "content": "{\n  \"compilerOptions\": {\n    \"target\": \"ES2019\",\n    \"module\": \"CommonJS\",\n    \"outDir\": \"dist\",\n    \"rootDir\": \"src\",\n    \"strict\": true,\n    \"esModuleInterop\": true\n  }\n}"
        },
        {
          "type": "file",
          "path": "README.md",
          "content": "# {{ name }} CLI Tool\n\nThis is the CLI tool for **{{ name }}**.\n\n```bash\nnpm install -g {{ name }}-cli\n{{ name }} --help\n```",
          "args": [
            "{{ name }}"
          ]
        },
        {
          "type": "folder",
          "path": "src",
          "children": [
            {
              "type": "file",
              "path": "src/cli.ts",
              "content": "import { Command } from 'commander';\n\nconst program = new Command();\nprogram\n  .name('{{ name }}')\n  .version('0.1.0')\n  .description('CLI for {{ name }}');\n\nprogram\n  .command('run')\n  .description('Run the {{ name }} task')\n  .action(() => {\n    console.log('ðŸš€ Running {{ name }}...');\n  });\n\nprogram.parse(process.argv);\n",
              "args": [
                "{{ name }}"
              ]
            }
          ]
        }
      ]
    },
    {
      "name": "node-page",
      "description": "A simple Node.js express page boilerplate",
      "src": [
        {
          "type": "file",
          "path": "package.json",
          "content": "{\n  \"name\": \"{{ name }}-page\",\n  \"version\": \"0.1.0\",\n  \"scripts\": {\n    \"start\": \"ts-node src/server.ts\"\n  },\n  \"dependencies\": {\n    \"express\": \"^4.17.1\"\n  },\n  \"devDependencies\": {\n    \"ts-node\": \"^10.0.0\",\n    \"typescript\": \"^4.0.0\"\n  }\n}",
          "args": [
            "{{ name }}"
          ]
        },
        {
          "type": "file",
          "path": "tsconfig.json",
          "content": "{\n  \"compilerOptions\": {\n    \"target\": \"ES2019\",\n    \"module\": \"CommonJS\",\n    \"outDir\": \"dist\",\n    \"rootDir\": \"src\",\n    \"strict\": true,\n    \"esModuleInterop\": true\n  }\n}"
        },
        {
          "type": "folder",
          "path": "public",
          "children": [
            {
              "type": "file",
              "path": "public/index.html",
              "content": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n  <meta charset=\"UTF-8\">\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n  <title>{{ name }} Page</title>\n</head>\n<body>\n  <h1>Welcome to {{ name }}!</h1>\n  <script src=\"/bundle.js\"></script>\n</body>\n</html>",
              "args": [
                "{{ name }}"
              ]
            }
          ]
        },
        {
          "type": "folder",
          "path": "src",
          "children": [
            {
              "type": "file",
              "path": "src/server.ts",
              "content": "import express from 'express';\nimport path from 'path';\n\nconst app = express();\nconst port = process.env.PORT || 3000;\n\napp.use(express.static(path.join(__dirname, '../public')));\n\napp.get('/', (_req, res) => {\n  res.sendFile(path.join(__dirname, '../public/index.html'));\n});\n\napp.listen(port, () => console.log('ðŸš€ {{ name }} page running at http://localhost:' + port));\n",
              "args": [
                "{{ name }}"
              ]
            }
          ]
        }
      ]
    }
  ]
}
