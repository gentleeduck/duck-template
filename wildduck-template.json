{
  "$schema": "https://duckduckgo.com/duckduckgo.json",
  "name": "wildduck",
  "version": "0.1.0",
  "description": "Wise decisions, powered by types.",
  "outdir": "./duck-template-dir",
  "variants": [
    {
      "name": "init",
      "description": "Basic TypeScript project scaffold",
      "src": [
        {
          "type": "file",
          "path": "package.json",
          "content": "{ \n  \"name\": \"{{ name }}\", \n  \"version\": \"0.1.0\", \n  \"main\": \"dist/index.js\", \n  \"scripts\": { \n    \"build\": \"tsc\", \n    \"start\": \"node dist/index.js\" \n  }, \n  \"dependencies\": {}, \n  \"devDependencies\": { \n    \"typescript\": \"^4.0.0\" \n  } \n}",
          "args": [
            "{{ name }}"
          ]
        },
        {
          "type": "file",
          "path": "tsconfig.json",
          "content": "{\n  \"compilerOptions\": {\n    \"target\": \"ES2019\",\n    \"module\": \"CommonJS\",\n    \"outDir\": \"dist\",\n    \"rootDir\": \"src\",\n    \"strict\": true,\n    \"esModuleInterop\": true\n  }\n}",
          "args": null
        },
        {
          "type": "folder",
          "path": "src",
          "children": [
            {
              "type": "file",
              "path": "src/index.ts",
              "content": "console.log('ðŸ‘‹ Welcome to {{ name }}!');",
              "args": [
                "{{ name }}"
              ]
            }
          ]
        },
        {
          "type": "file",
          "path": "README.md",
          "content": "# {{ name }}\n\nA fresh TypeScript starter project.\n\n## Developing\n\n```bash\nnpm install\nnpm run build\nnpm start\n```",
          "args": [
            "{{ name }}"
          ]
        },
        {
          "type": "file",
          "path": ".gitignore",
          "content": "node_modules/\ndist/",
          "args": null
        }
      ]
    }
  ],
  "args": {
    "name": "wildduck"
  }
}